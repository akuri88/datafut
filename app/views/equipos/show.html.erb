<%-# INFO EQUIPO -%>
<div>
	<div>
		<%= image_tag(@equipo.Logo__c, :alt => @equipo.Nombre__c, :class => "logo_view") %>
	</div>
	<div>
		<h1><%= @equipo.Name %></h1>
	</div>
</div>

<% if false %>
<%-# PARTIDOS -%>
<div>
	<table>
		<% @partidos.each do |partido| %>
			<tr>
				<td><%= link_to partido.Local__c, equipo_path(partido.Local__c) %></td>
				<td><%= link_to partido.Goles_Local - partido.Goles_Visita__c, equipo_path(partido.Id) %></td>
				<td><%= link_to partido.Visita__c, equipo_path(partido.Visita__c) %></td>
			</tr>
		<% end %>
	</table>
</div>
<% end %>

<%-# JUGADORES -%>
